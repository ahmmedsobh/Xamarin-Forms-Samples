<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Forms_Samples.Pages.WorkingWithEvents"
             Title="Working With Events">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="15" BackgroundColor="Blue">
            <Entry Placeholder="Enter Your Name" TextColor="White" x:Name="txtName"/>
            <Button Text="Display Message" Margin="5" Clicked="DisplayMessage"/>
            <Label x:Name="lblMessage" Margin="5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>