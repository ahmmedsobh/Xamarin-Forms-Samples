<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Forms_Samples.Pages.WorkingWithMasterDetailPage"
                  Title="Working With Master Detail Page">
    <MasterDetailPage.Master>
        <ContentPage Title="Master">
            <Label Text="This is the master page" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Red"/>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <ContentPage Title="Detail">
            <Label Text="This is the detail page" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Red"/>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>