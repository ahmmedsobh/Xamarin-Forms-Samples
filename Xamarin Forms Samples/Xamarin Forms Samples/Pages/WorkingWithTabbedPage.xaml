<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Forms_Samples.Pages.WorkingWithTabbedPage"
            Title="Working With Tabbed Page">
    <TabbedPage.Children>
        
        <ContentPage Title="Home" BackgroundColor="Blue">
            <Label Text="This is Home" HorizontalOptions="Center" VerticalOptions="Center"/>
        </ContentPage>
        
        <ContentPage Title="Contact" BackgroundColor="Red">
            <Label Text="This is Contact" HorizontalOptions="Center" VerticalOptions="Center"/>
        </ContentPage>
        
        <ContentPage Title="About" BackgroundColor="White">
            <Label TextColor="Blue" Text="This is About" HorizontalOptions="Center" VerticalOptions="Center"/>
        </ContentPage>
        
    </TabbedPage.Children>
</TabbedPage>