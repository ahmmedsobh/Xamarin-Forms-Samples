<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Forms_Samples.Pages.WorkingWithAbsoluteLayout"
             Title="Working With Absolute Layout">
    <ContentPage.Content>
        <AbsoluteLayout>
            <!--<BoxView Color="Blue" 
                     AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds="x(Horizontal),y(Vertical),Width,Height"/>-->
            
           
            <BoxView BackgroundColor="Blue"
                     AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"/>

            <BoxView BackgroundColor="Red"
                     AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds=".1,.1,.5,.5"/>
            
            <BoxView BackgroundColor="Red"
                     AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds=".9,.1,.5,.5"/>
            
            <BoxView BackgroundColor="Red"
                     AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds=".1,.9,.5,.5"/>

            <BoxView BackgroundColor="Red"
                     AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds=".9,.9,.5,.5"/>






        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>